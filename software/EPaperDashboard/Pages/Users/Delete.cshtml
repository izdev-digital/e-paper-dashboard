@page "{id}"
@model EPaperDashboard.Pages.Users.DeleteModel
@{
    ViewData["Title"] = "Delete User";
}

<h1>Delete User</h1>

@if (Model.UserToDelete != null)
{
    <div class="alert alert-warning">
        <strong>Warning:</strong> This action cannot be undone. Deleting user <b>@Model.UserToDelete.Username</b> will also delete all their dashboards.
    </div>
    <form method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Users/Manage" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}
else
{
    <div class="alert alert-danger">User not found.</div>
}
