@page
@model EPaperDashboard.Pages.LoginModel
@{
}

<div class="container mt-5">
    <h2 class="text-center">Login or Register</h2>
    <form method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" asp-for="Username" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" asp-for="Password" required>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" name="handler" value="Login" class="btn btn-primary w-50">Login</button>
            <button type="submit" name="handler" value="Register" class="btn btn-success w-50">Register</button>
        </div>
    </form>
</div>
