@page
@model EPaperDashboard.Pages.Dashboards.CreateModel
@{
    ViewData["Title"] = "Create Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center">Create Dashboard</h2>
    <form method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Description (optional)</label>
            <input type="text" class="form-control" asp-for="Description">
        </div>
        <div class="mb-3">
            <label class="form-label">Access Token (optional)</label>
            <input type="text" class="form-control" asp-for="AccessToken">
        </div>
        <div class="mb-3">
            <label class="form-label">Dashboard Host (optional)</label>
            <input type="text" class="form-control" asp-for="Host">
        </div>
        <div class="mb-3">
            <label class="form-label">Dashboard Path (optional)</label>
            <input type="text" class="form-control" asp-for="Path">
        </div>
        <div class="mb-3">
            <label class="form-label">Update Times (add times in 24h format, e.g. 06:00, 12:00, 18:00; leave blank for none)</label>
            <input type="text" class="form-control" name="UpdateTimesRaw" placeholder="06:00,12:00,18:00">
            <div class="form-text">Separate times with commas. Example: 06:00,12:00,18:00</div>
        </div>
        <div class="mb-3">
            <label class="form-label">Update Schedule (e.g. 06:00,22:00,06:00;22:00,06:00,08:00)</label>
            <input type="text" class="form-control" name="UpdateScheduleRaw" placeholder="06:00,22:00,06:00;22:00,06:00,08:00">
            <div class="form-text">Format: start,end,interval (HH:mm,HH:mm,hh:mm), separate multiple intervals with semicolons.<br>Example: 06:00,22:00,06:00;22:00,06:00,08:00</div>
        </div>
        <button type="submit" class="btn btn-primary w-100">Create</button>
    </form>
</div>