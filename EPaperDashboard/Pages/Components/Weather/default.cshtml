@using EPaperDashboard.Models.Weather
@model WeatherInfo?
@if (Model is not null)
{
    <div class="widget">
    <div class="d-flex align-items-center justify-content-between weather-daily-container">
        <div>
            <div>
                @Model.Location
            </div>
            <div>
                <span>L:</span><span>@Model.Daily.TemperatureMin.Value</span><span>@Model.Daily.TemperatureMin.Unit</span>
            </div>
            <div>
                <span>H:</span><span>@Model.Daily.TemperatureMax.Value</span><span>@Model.Daily.TemperatureMax.Unit</span>
            </div>
            <div>
                @Model.Daily.WeatherCode
            </div>
        </div>
        <div>
            <div>
                Image for @Model.Daily.WeatherCode
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-around">
        @foreach (var info in Model.Hourly.Where(x => new[] { 8, 12, 16, 20 }.Contains(x.Time.Hour)))
            {
                <div class="d-flex flex-column align-items-center weather-hourly-container">
                    <div>
                        @info.Time.ToString("HH:mm")
                    </div>
                    <div>
                        Image for @info.WeatherCode
                    </div>
                    <div>
                        @info.Temperature.Value@info.Temperature.Unit
                    </div>
                </div>
            }
        </div>
    </div>
}